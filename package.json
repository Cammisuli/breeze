{
  "name": "breeze-theme",
  "displayName": "Breeze Theme",
  "description": "A cool blue dark/light color theme",
  "version": "1.0.0",
  "repository": {
    "url": "https://github.com/Cammisuli/breeze"
  },
  "author": {
    "name": "Jonathan Cammisuli"
  },
  "keywords": [
    "blue theme",
    "dark theme",
    "light theme",
    "breeze"
  ],
  "publisher": "cammisuli",
  "license": "MIT",
  "engines": {
    "vscode": "^1.41.0"
  },
  "scripts": {
    "bundle": "vsce package --out custom-theme.vsix",
    "publish-bundle": "vsce publish --packagePath custom-theme.vsix",
    "build": "yarn bundle",
    "release": "standard-version"
  },
  "categories": [
    "Themes"
  ],
  "icon": "assets/breeze-icon.png",
  "contributes": {
    "themes": [
      {
        "label": "Cool Breeze",
        "uiTheme": "vs-dark",
        "path": "./themes/cool-breeze.json"
      },
      {
        "label": "Cool Breeze (no italics)",
        "uiTheme": "vs-dark",
        "path": "./themes/cool-breeze-no-italics.json"
      },
      {
        "label": "Warm Breeze",
        "uiTheme": "vs",
        "path": "./themes/warm-breeze.json"
      },
      {
        "label": "Warm Breeze (no italics)",
        "uiTheme": "vs",
        "path": "./themes/warm-breeze-no-italics.json"
      }
    ]
  },
  "devDependencies": {
    "standard-version": "^9.1.1",
    "vsce": "2.5.1"
  }
}
